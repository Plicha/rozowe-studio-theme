    register_sidebar(array(
        'name'          => esc_html__('Sidebar', 'rozowe-studio'),
        'id'            => 'sidebar-1',
        'description'   => esc_html__('Add widgets here.', 'rozowe-studio'),
        'before_widget' => '<section id="%1$s" class="widget %2$s">',
        'after_widget'  => '</section>',
